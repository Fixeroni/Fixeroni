datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Artisan {
  id                String            @id @default(uuid())
  email             String            @unique
  password          String? // Made optional to support social auth
  fixeroniTag       String            @unique
  yearsOfExperience Int?
  category          String?
  firstName         String?
  address           String?
  workPortfolio     String?          // Store the URL/path to the work portfolio file
  workPortfolioName String?          // Store the original filename
  workPortfolioSize Int?             // Store file size in bytes
  workPortfolioType String?          // Store the MIME type
  serviceCategory   String?          // Keep only one service category field
  governmentIdLink  String?
  profilePicture    String?
  confirmationCode  ConfirmationCode?
  accountType       String
  provider          AuthProvider      @default(local) // Added provider field
  providerId        String? // Added providerId for social auth
  refreshTokens     RefreshToken[] // Added refresh tokens relation
  createdAt         DateTime          @default(now()) // Added audit fields
  updatedAt         DateTime          @updatedAt
  isVerified        Boolean           @default(false)
  verificationCodes VerificationCode[]

  @@index([provider, providerId]) // Added index for social auth lookups
}

model ConfirmationCode {
  id        String   @id @default(uuid())
  expires   DateTime
  code      String
  artisan   Artisan  @relation(fields: [artisanId], references: [id])
  artisanId String   @unique
}

model RefreshToken {
  id        String    @id @default(uuid())
  token     String    @unique
  userId    String
  expiresAt DateTime
  revokedAt DateTime?
  createdAt DateTime  @default(now())
  Artisan   Artisan?  @relation(fields: [artisanId], references: [id])
  artisanId String?

  @@index([userId])
}

model VerificationCode {
  id        String   @id @default(uuid())
  code      String
  email     String
  expiresAt DateTime
  artisanId String
  artisan   Artisan  @relation(fields: [artisanId], references: [id])
  createdAt DateTime @default(now())
  used      Boolean  @default(false)

  @@index([code])
  @@index([email])
}

enum AuthProvider {
  facebook
  local
  google
}
