datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Artisan {
  id                String            @id @default(uuid())
  email             String            @unique
  password          String? // Made optional to support social auth
  fixeroniTag      String            @unique
  yearsOfExperience Int?
  category          String?
  firstName         String?
  linkToPortfolio   String?
  address           String?
  categoryOfService String?
  governmentIdLink  String?
  profilePicture    String?
  confirmationCode  ConfirmationCode?
  accountType       String
  provider          AuthProvider      @default(local) // Added provider field
  providerId        String? // Added providerId for social auth
  refreshTokens     RefreshToken[] // Added refresh tokens relation
  createdAt         DateTime          @default(now()) // Added audit fields
  updatedAt         DateTime          @updatedAt

  @@index([provider, providerId]) // Added index for social auth lookups
}

model ConfirmationCode {
  id        String   @id @default(uuid())
  expires   DateTime
  code      String
  artisan   Artisan  @relation(fields: [artisanId], references: [id])
  artisanId String   @unique
}

model RefreshToken {
  id        String    @id @default(uuid())
  token     String    @unique
  userId    String
  expiresAt DateTime
  revokedAt DateTime?
  createdAt DateTime  @default(now())
  Artisan   Artisan?  @relation(fields: [artisanId], references: [id])
  artisanId String?

  @@index([userId])
}

enum AuthProvider {
  local
  google
}
